{
  "compilerOptions": {
    "outDir": "./dist/",
    // Не позволяет использовать код без типа
    "noImplicitAny": true,
    // Указание модульной системы
    "module": "esnext",
    // Версия, в которую компилируется код (от этого зависит поддержка браузерами)
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // Для абсолютного импорта
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/setupTests.ts"
  ]
}
